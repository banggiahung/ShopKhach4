<div class="title text-center"><span>Đăng nhập Admin</span></div>
<form method="post" action="~/Dashboard/Login" class="d-flex flex-column align-items-center">
    <input type="hidden" id="RememberMe" name="RememberMe" value="true" />

    <div class="row mb-3">
        <i class="fas fa-user"></i>
        <input type="text" class="form-control" id="UserName" name="userName"  />

    </div>
    <div class="row mb-3">
        <i class="fas fa-lock"></i>
        <input type="password" id="Password"  name="password" class="form-control" />

    </div>
    <div class="row button">
        <input type="submit" value="Đăng nhập">
    </div>
</form>